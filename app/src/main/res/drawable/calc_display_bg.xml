<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF"/>
            <stroke android:width="1dp" android:color="@color/calc_disp_border"/>
        </shape>
    </item>

    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="@color/calc_disp_top"
                android:endColor="@color/calc_disp_bottom"/>
        </shape>
    </item>
</layer-list>
